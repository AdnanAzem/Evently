<%- include('partials/header') %>

<main>
    <h1>Your Travel Plans</h1>

    <div id="plans">
        <% if (plans.length > 0) { %>
            <% plans.forEach(plan => { %>
                <div class="plan">
                    <h2><%= plan.destination %></h2>
                    <p><strong>Start Date:</strong> <%= plan.start_date %></p>
                    <p><strong>End Date:</strong> <%= plan.end_date %></p>
                    <p><strong>Weather:</strong> <%= plan.weather_data.weather[0].description %>, <%= plan.weather_data.main.temp %>Â°C</p>

                    <h3>Activities</h3>
                    <ul>
                        <% if (Array.isArray(plan.activities) && plan.activities.length > 0) { %>
                            <% plan.activities.forEach(activity => { %>
                                <li>
                                    <strong><%= activity.name %></strong><br>
                                    <%= activity.location?.address || 'Location not provided' %>
                                </li>
                            <% }); %>
                        <% } else { %>
                            <li>No activities found.</li>
                        <% } %>
                    </ul>
                </div>
            <% }); %>
        <% } else { %>
            <p>No travel plans found.</p>
        <% } %>
    </div>
</main>

<%- include('partials/footer') %>